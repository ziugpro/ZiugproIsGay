FullBlack.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
FullBlack.BorderSizePixel = 0
FullBlack.ZIndex = 1
FullBlack.Parent = ScreenGui

local Image = Instance.new("ImageLabel")
